\setbeamerfont{title page}{family=\rmfamily}
\setbeamerfont{author}{size=\small}
\setbeamertemplate{title page}
{%
	%\vskip35pt
	%\vskip25pt
	\vskip15pt
	\centering
	\usebeamerfont{title}\inserttitle
	\vspace*{0.5ex}
	\textcolor{white}{\hrule height 2pt}
	\bigskip
	\usebeamerfont{author}\insertauthor\par
	\vspace*{1ex}
	\usebeamerfont{institute}\insertinstitute\par
	\vspace*{1ex}
	\usebeamerfont{date}\insertdate\par
	\usebeamercolor[fg]{titlegraphic}\inserttitlegraphic
}

\newenvironment{withoutheadline}{%
	\setbeamercolor{background canvas}{bg=white}
	\setbeamertemplate{headline}{%
		\begin{minipage}[c][0.9cm]{\paperwidth}
			\begin{minipage}{3cm}
				%\centering
				~\includegraphics[height=0.85cm]{OVGU_SIGN_druck.pdf}
			\end{minipage}
		\end{minipage}
		\color{ovgu}\rule{\paperwidth}{1pt} 
	}
	\setbeamertemplate{footline}{%
		\colorbox{ovgu}{\begin{minipage}[c][0.4cm]{\textwidth}%
			\hfill
		\end{minipage}\hspace{-6pt}}
	}
}{}

\setbeamertemplate{headline}
{\begin{minipage}[c][0.9cm]{\paperwidth}
		\begin{minipage}{3cm}
			%\centering
			~\includegraphics[height=0.85cm]{OVGU_SIGN_druck}
		\end{minipage}
		\begin{minipage}{13cm}
		%Fügt die Standard-Navi ein (miniframes)
			\insertnavigation{0.75\paperwidth}
			\vskip4pt
		\end{minipage}
	\end{minipage}
	\color{ovgu}\rule{\paperwidth}{1pt} 
}

\setbeamertemplate{footline}{%
\colorbox{ovgu}{\begin{minipage}[c][0.4cm]{\textwidth}%	
	%\hspace*{0.5cm}\color{white}{\inserttitle}
	\hspace*{0.5cm}\color{white}{\insertshorttitle}
	\hfill\tiny\insertframenumber\hspace*{0.5cm}
\end{minipage}\hspace{-6pt}}
}

\AtBeginSection[]
{
	\begin{withoutheadline}
		\miniframesoff
		\begin{frame}
			\begin{center}
				\usebeamercolor[fg]{block title}\LARGE{\insertsection}
			\end{center}
		\end{frame}
		\miniframeson
	\end{withoutheadline}
}

\AtBeginSubsection[]
{
	\begin{withoutheadline}
		\miniframesoff
			\begin{frame}<beamer>
				\frametitle{Zwischenübersicht}
				\tableofcontents[sectionstyle=show/hide,subsectionstyle=show/shaded/hide,subsubsectionstyle=show/show/shaded/hide]
			\end{frame}
		\miniframeson
	\end{withoutheadline}
}

